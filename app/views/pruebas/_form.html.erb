<%= form.fields_for :pruebas, :html => {:class => "form-horizontal"} do |prueba| %>

      <legend>Evaluación</legend>
    <div class="row">
      <div class="span10">
        <div class="row">
          <div class="span5">
          <div class="control-group">
            <%= prueba.label :tipoprueba, "Tipo de prueba", :class => "control-label" %><br />
            <div class="controls">
              <%= prueba.text_field :tipoprueba, :class => "input-xlarge", :type => "text", :placeholder => "Introduce tipo de prueba" %>
            </div>
          </div>
            <div class="control-group">
              <%= prueba.label :ponderacion,"Ponderación", :class => "control-label" %><br />
              <div class="controls">
                <%= prueba.text_field :ponderacion, :class => "input-xlarge", :type => "text", :placeholder => "Introduce una ponderación"  %>
              </div>
            </div>
            <div class="control-group">
              <%= prueba.label :prueba_tokens, "Competencias", :class => "control-label" %><br />
              <div class="controls">
                <%= prueba.text_field :prueba_tokens, :class => "input-medium search-query", "data-pre" => @prueba.competencies.map(&:attributes).to_json %>
              </div>
            </div>
          </div>
          <div class="span5">
          <div class="control-group">
            <%= prueba.label :criterios, :class => "control-label" %><br />
            <div class="controls">
              <%= prueba.text_area :criterios, :rows => "2", :cols => "60", :type => "text", :placeholder => "Introduce los criterios"  %>
            </div>
          </div>
            <div class="control-group">
              <%= prueba.label :descripcion, "Descripción", :class => "control-label" %><br />
              <div class="controls">
                <%= prueba.text_area :descripcion, :rows => "2", :cols => "60", :type => "text", :placeholder => "Introduce una descripción"  %>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>




<% end %>
