<div class="container">
  <div id="header">
    <img src="/assets/ull_color_horizontal2.jpg" class="img-rounded" alt="Asignatura" />
    <div class="page-header">
      <h1>Competencias <small>√çndice</small></h1>
    </div>
  </div>

<table class="table table-bordered">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Descripcion</th>
    <th>Tipo</th>
    <th></th>
    <% if can? :edit, @competency %>
        <th></th>
    <% end %>
    <% if can? :destroy, @competency %>
        <th></th>
    <% end %>
  </tr>

<% @competencies.each do |competency| %>
  <tr>
    <td><%= competency.id %></td>
    <td><%= competency.name %></td>
    <td><%= competency.descripcion %></td>
    <td><%= competency.tipo %></td>
    <td><%= link_to 'Mostrar', competency, :class => "btn"  %></td>
    <% if can? :new, @competency %>
        <td><%= link_to 'Editar', edit_competency_path(competency), :class => "btn" %></td>
    <% end %>
    <% if can? :destroy, @competency %>
        <td><%= link_to 'Borrar', competency, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if can? :new, @competency %>
      <div class="btn">
    <%= link_to 'Nueva Competencia', new_competency_path %>
      </div>
<% end %>
  <div class="btn">
<%= link_to 'Home', index_path %>
    </div>

</div>